{
  "name": "dexplorer-desktop",
  "productName": "dExplorer Desktop",
  "description": "dExplorer desktop application reimagined for Windows, Mac, Linux users, start earning cryptocurrency!",
  "version": "1.1.12",
  "releasePost": "dpay/@dpay/introducing-dexplorer",
  "private": true,
  "author": "dPay Labs <labs@dpays.io>",
  "copyright": "Â© 2018, dPay Labs",
  "homepage": "https://dexplorer.io",
  "main": "app/background.js",
  "build": {
    "appId": "app.dpay.dexplorer",
    "mac": {
      "category": "public.app-category.finance",
      "type": "distribution",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "dmg": {
      "background": "resources/dmg-bg.png",
      "window": {
        "width": 600,
        "height": 578
      },
      "contents": [
        {
          "x": 490,
          "y": 255,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 215,
          "y": 255,
          "type": "file"
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json",
      "bower_components/**/*",
      "!build_assets${/*}"
    ],
    "protocols": [
      {
        "name": "dpay",
        "role": "Viewer",
        "schemes": [
          "dpay",
          "dexplorer"
        ]
      }
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "dexplorerapp",
        "repo": "dexplorer-desktop",
        "vPrefixedTagName": false,
        "private": false,
        "releaseType": "draft"
      }
    ]
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --bail --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "bower install && webpack --config=build/webpack.app.config.js --env=production && electron-builder -mwl",
    "package": "build -mwl"
  },
  "dependencies": {
    "angular": "1.6.9",
    "angular-route": "^1.6.9",
    "angular-translate": "^2.17.0",
    "angular-ui-bootstrap": "^2.5.6",
    "angularjs-slider": "^6.5.0",
    "buffer": "^5.1.0",
    "crypto-js": "^3.1.9-1",
    "currency-symbol-map": "^4.0.3",
    "diff-match-patch": "^1.0.0",
    "dpayid": "~0.1.2",
    "dpayjs": "~0.7.4",
    "electron-updater": "^2.21.10",
    "express": "^4.16.3",
    "fs-jetpack": "^1.0.0",
    "jquery": "^3.3.1",
    "jsdom": "^11.12.0",
    "moment": "^2.20.1",
    "moment-timezone": "^0.5.14",
    "qrcode": "^1.2.0",
    "remarkable": "^1.7.1",
    "speakingurl": "^14.0.1"

  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.5",
    "@babel/preset-env": "^7.0.0-beta.5",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "bootstrap-sass": "^3.3.7",
    "chai": "^4.1.0",
    "chai-string": "^1.4.0",
    "css-loader": "^0.28.7",
    "electron": "1.8.6",
    "electron-builder": "^19.43.3",
    "electron-mocha": "^5.0.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "mocha": "^4.0.1",
    "node-sass": "^4.9.0",
    "sass-loader": "^6.0.6",
    "source-map-support": "^0.5.0",
    "spectron": "^3.7.2",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.6.0"
  }
}
